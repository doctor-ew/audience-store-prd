{
  "name": "audience-store-prd",
  "image": "mcr.microsoft.com/devcontainers/javascript-node:20-bookworm",

  "features": {
    "ghcr.io/devcontainers/features/node:1": { "version": "20" },
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/github-cli:1": {},
    "ghcr.io/devcontainers/features/python:1": { "version": "3.12" },
    "ghcr.io/rails/devcontainer/features/bun:1.0.2": {}
  },

  "containerEnv": {
    "OPENAI_API_KEY": "${localEnv:OPENAI_API_KEY}",
    "ANTHROPIC_API_KEY": "${localEnv:ANTHROPIC_API_KEY}",
    "GEMINI_API_KEY": "${localEnv:GEMINI_API_KEY}",
    "OPENROUTER_API_KEY": "${localEnv:OPENROUTER_API_KEY}"
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "anthropic.claude-code",
        "Google.geminicodeassist",
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode"
      ],
      "mcp": {
        "servers": {
          "serena": {
            "command": "npx",
            "args": ["-y", "serena-mcp"],
            "env": {
              "OPENAI_API_KEY": "${localEnv:OPENAI_API_KEY}",
              "ANTHROPIC_API_KEY": "${localEnv:ANTHROPIC_API_KEY}",
              "GEMINI_API_KEY": "${localEnv:GEMINI_API_KEY}",
              "OPENROUTER_API_KEY": "${localEnv:OPENROUTER_API_KEY}",
              "SERENA_DEFAULT_MODEL": "gpt-4o-mini",
              "SERENA_LOG_LEVEL": "info"
            }
          }
        }
      }
    }
  },

  "postCreateCommand": "bash .devcontainer/postCreate.sh",
  "postAttachCommand": "bash .devcontainer/postAttach.sh",

  "forwardPorts": [3000],
  "portsAttributes": {
    "3000": { "label": "App", "onAutoForward": "openPreview" }
  }
}
